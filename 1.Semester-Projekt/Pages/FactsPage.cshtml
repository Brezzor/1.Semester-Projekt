@page 
@model FactsPageModel
@{
    ViewData["Title"] = "Facts List";
}

<div class="text-center">
    <h1 class="display-4">Welcome To @ViewData["Title"]</h1>
</div>

<div class="container text-center">
    <div class="row">
        @foreach (var item in Model.Faktas)
        {
        <div class="col-sm-4" style="background-image: url(../wwwroot/images/Headbang.jfif)">
            <img src="~/images/@item.Value.ImageName" width="60" height="70">
            <h3>@item.Value.Emne @item.Value.Id</h3>
            <a class="btn btn-orange" asp-page="@item.Value.Path">Go To</a>
        </div>
        }
    </div>
</div>
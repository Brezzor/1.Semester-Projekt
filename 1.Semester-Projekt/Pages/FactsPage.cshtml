@page 
@model FactsPageModel
@{
    ViewData["Title"] = "Facts List";
}

<div class="text-center">
    <h1 class="display-4">Welcome To @ViewData["Title"]</h1>
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Faktas)
            {
                <div class="col-4 mb-4">
                    <div class="" style="height: 15rem; border-radius: 1rem; background-image: url(' /images/@item.Value.ImageName'); background-repeat: no-repeat; background-size: cover; background-position:center;">
                        <h3 class="text-white p-3">@item.Value.Emne</h3>
                        <a class="btn btn-orange" asp-route-id="@item.Key" asp-page="@item.Value.Path">Go To</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
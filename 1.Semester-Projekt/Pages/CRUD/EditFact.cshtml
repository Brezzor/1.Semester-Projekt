@model _1.Semester_Projekt.Pages.EditFactModel
@using _1.Semester_Projekt.Models
@{
}
@*Hovedansvarlig: Rasmus (Hele Edit)*@

<h1 class="display-4 text-center">Edit Afspillere</h1>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@Model.Fakta.Id" class="control-label"></label>
                <input asp-for="@Model.Fakta.Id" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.Fakta.Emne" class="control-label"></label>
                <input readonly asp-for="@Model.Fakta.Emne" class="form-control">
            </div>

            <div class="form-group">
                <label asp-for="@Model.Fakta.EmneTekst" class="control-label"></label>
                <input asp-for="@Model.Fakta.EmneTekst" class="form-control" />
            </div>

            <div>
                <input type="submit" value="Submit" class="btn btn-orange" />
                <a class="btn btn-danger" asp-page="Edit">Cancel</a>
            </div>
        </form>
    </div>
</div>

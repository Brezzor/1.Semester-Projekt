@page
@model _1.Semester_Projekt.Pages.CreateModel
@using _1.Semester_Projekt.Models
@{
    ViewData["Title"] = "Create Facts Page";
}

<h1 class="display-4 text-center mb-4">
    @ViewData["Title"]
</h1>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@Model.Fakta.Id" class="control-label"> Id</label>
                <input asp-for="@Model.Fakta.Id" class="form-control" type="number" />                
            </div>

            <div class="form-group">
                <label asp-for="@Model.Fakta.Emne" class="control-label">Emne</label>
                <select asp-for="@Model.Fakta.Emne" class="form-control" asp-items="Html.GetEnumSelectList<Emner>()"><option>Vælg Emne</option></select>                
            </div>

            <div class="form-group">
                <label asp-for="@Model.Fakta.EmneTekst" class="control-label"> Emne teskt</label>
                <input asp-for="@Model.Fakta.EmneTekst" class="form-control" type="text" />                
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-orange" />
                <a class="btn btn-danger" asp-page="Edit">Cancel</a>
            </div>

        </form>
    </div>
</div>
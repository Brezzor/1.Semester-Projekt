@page
@model _1.Semester_Projekt.Pages.EditModel
@{
    ViewData["BackgroundClass"] = "bg-black";
    ViewData["Title"] = "Edit Page";
}

<div class="text-center" id="Top">
    <h1 class="display-4 text-light">@ViewData["Title"]</h1>

    <a class="btn btn-orange mb-4 mt-4" asp-page="CreateFacts">Create new fact</a>
    <a class="btn btn-orange mb-4 mt-4" href="#afspillere">Afspillere</a>
    <a class="btn btn-orange mb-4 mt-4" href="#dans">Dans</a>
    <a class="btn btn-orange mb-4 mt-4" href="#fans">Fans</a>
    <a class="btn btn-orange mb-4 mt-4" href="#instrumenter">Instrumenter</a>

    <a class="btn btn-orange mb-4 mt-4" href="#musik-genre">Musik Genre</a>
    <a class="btn btn-orange mb-4 mt-4" href="#politik">Politik</a>
</div>

<h2 class="text-light pb-2" id="afspillere">Afspillere</h2>

<table class="table table-bordered table-black">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Emne
            </th>
            <th>
                Emne Tekst
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fact in Model.AfspillereFaktas)
        {
        <tr>
            <td class="col-1">
                @fact.Value.Id
            </td>
            <td class="col-1">
                @fact.Value.Emne
            </td>
            <td class="col">
                @fact.Value.EmneTekst
            </td>
            <td class="text-center col-1">
                <a class="btn btn-orange" asp-route-id="@fact.Key" asp-route-emne="@fact.Value.Emne" asp-page="EditFact">Edit</a>
            </td>
            <td class="text-center col-1">
                <a class="btn btn-orange" asp-route-id="@fact.Key" asp-route-emne="@fact.Value.Emne" asp-page="DeleteFact">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <a href="#Top" class="text-light">Back to top</a>
</div>


@page
@model _1.Semester_Projekt.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>

<button class="btn btn-orange mb-4 mt-4" asp-page="/CreateFacts">Create new fact</button>

<table class="table table-bordered table-dark">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Emne
            </th>
            <th>
                EmneTekst
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Faktas)
        {
        <tr>
            <td>
                @item.Value.Id
            </td>
            <td>
                @item.Value.Emne
            </td>
            <td>
                @item.Value.EmneTekst
            </td>
            <td>
                <p>
                    <button type="button" class="btn btn-orange" data-toggle="modal" data-target="#@item.Value.Id">Delete</button>

                    <div class="modal fade" id="@item.Value.Id" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h3>Confirm delete</h3>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure you want to delete this fact? @item.Value.Emne</p> 
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-orange" onclick="@Model.DeleteFact(item.Key)">Yes</button>
                                    <button class="btn btn-orange" >No</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </p>
            </td>
        </tr>
        }
    </tbody>
</table>